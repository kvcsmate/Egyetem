@model IEnumerable<Library.Web.Models.Book>

@{
    ViewData["Title"] = "Katalógus";
}

<h1>Katalógus</h1>

<form asp-action="Index" method="get">
    <div>
            Keresés <input type="text" name="filter"/>
            <input type="submit" value="Search" class="btn btn-default"/>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParam"]">@Html.DisplayNameFor(model => model.Name)</a>
            </th>
            <th>
                <!--@Html.DisplayNameFor(model => model.Image)-->
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ISBN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </th>

            <th>

                <a asp-action="Index" asp-route-sortOrder="@ViewData["FameSortParam"]">@Html.DisplayNameFor(model => model.Rents)</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @if (item.Image != null)
                    {
                        <img src="@Url.Action("DisplayImage","Books", new { id = item.Id})" class="item" height="200" />
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ISBN)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReleaseDate)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Rents)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Kötetek és előjegyzés</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@for (int i = 0; i < (int)ViewData["PageCount"]; ++i)
{
    <a asp-action="Index" asp-route-id="@i">@(i+1) </a>
}

